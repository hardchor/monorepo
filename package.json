{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:hardchor/monorepo.git",
  "author": "Burkhard Reffeling <burkhard.reffeling@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "hardchor-scripts format",
    "test": "lerna exec yarn test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@hardchor/serverless-appsync/**"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "@hardchor/scripts": "*",
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "lint-staged": "^8.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "SCRIPTS_PRECOMMIT=true lint-staged"
    }
  },
  "lint-staged": {
    "*.{js|json|less|css|ts|tsx|md}": [
      "yarn format",
      "git add"
    ]
  }
}
